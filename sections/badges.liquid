    {
      "type": "range",
      "id": "margin_under_title",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Margin under the title",
      "default": 12
    },
    {
      "type": "header",
      "content": "SECTION"
    },
    {
      "type": "color_background",
      "id": "section_background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "margin_top",
