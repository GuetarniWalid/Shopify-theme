    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Bottom margin",
      "default": 35
    }
 ],
  "blocks": [
    {
      "type": "badge_block",
      "name": "Badge column",
      "settings": [
        {
            "type": "html",
            "id": "badge_logo",
            "label": "Logo",
            "info": "Only svg are allowed"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Title",
          "default": "Badge title"
        },
        {
          "type": "textarea",
