      "label": "Background color",
      "default": "#E0E0E0"
    },
    {
      "type": "header",
      "content": "title and text"
    },
    {
      "type": "checkbox",
      "id": "title_bold",
      "label": "Title in bold",
      "default": true
    },
    {
      "type": "range",
      "id": "margin_under_logo",
