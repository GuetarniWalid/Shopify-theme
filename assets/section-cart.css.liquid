.cart-section {
  background: var(--cart-background);
  color: var(--font-color);
}

.cart-section cart-section,
.cart-section cart-section-collapse {
  min-height: 100vh;
  display: grid;
  grid-template-columns: auto;
  grid-template-rows: auto 1fr auto;
}

/* .cart-section::-webkit-scrollbar {
  display: none;
} */

.cart-section .loading-overlay__spinner {
  display: flex;
  align-items: center;
}

.cart-header {
  background: var(--footer-background);
  color: var(--footer-font-color);
  padding: 0 var(--space);
}

.cart-header > div {
  max-width: 1000px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-header h2 {
  color: var(--footer-font-color);
  font-size: 2.4rem;
  margin: 1rem 0;
}

.cart-header a {
  color: inherit;
  text-decoration: underline;
}

.cart-header svg {
  color: var(--footer-font-color);
  width: 1.7rem;
}

.cart-body {
  padding: 2rem var(--space) 0;
}

.cart-body-empty {
  font-size: 2rem;
  padding-top: 2%;
  text-align: center;
}

.cart-body-empty svg {
  width: 50vh;
  max-width: 300px;
  opacity: 10%;
}

.cart-product-raw {
  margin: 0 auto var(--space);
  background: var(--card-color);
  border-radius: var(--border-radius);
  padding: 3rem;
  display: grid;
  grid-template-columns: auto auto 1fr;
  grid-template-rows: auto auto;
  row-gap: 2rem;
  column-gap: 3rem;
  transition: all 0.3s ease-out;
  max-width: 900px;
}

.cart-product-raw.remove {
  transform: translateX(-50%);
  opacity: 0;
  pointer-events: none;
}

.cart-product-raw svg {
  color: var(--font-color);
}

.cart-product-raw .path {
  stroke: var(--font-color);
}

.cart-product-raw-img-box {
  grid-column: 1 / span 1;
  grid-row: 2 / span 1;
  position: relative;
  height: 112px;
  width: 112px;
  margin: auto 0 0;
}

.cart-product-raw-img-box img {
  border-radius: calc(var(--border-radius) / 3);
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cart-product-raw-img-box.sold-out:before {
  content: "{{ 'products.product.sold_out' | t }}";
  position: absolute;
  top: 20px;
  right: -5px;
  background: var(--font-color);
  color: var(--button-color);
  padding: 0.1rem 30px;
  clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%, 15% 50%);
}

.cart-product-raw-img-box.sold-out:after {
  content: '';
  width: 5px;
  height: 5px;
  clip-path: polygon(0% 0%, 100% 100%, 0% 100%);
  position: absolute;
  top: 15px;
  right: -5px;
  background: var(--font-color);
}

.cart-product-raw-img-box span {
  background: var(--font-color);
  color: var(--button-color);
  position: absolute;
  right: 0;
  bottom: 0;
  transform: translate(-30%, 65%);
  border-radius: 50%;
  width: 2.5rem;
  height: 2.5rem;
  text-align: center;
  line-height: 2.5rem;
  font-weight: bold;
}

.cart-product-raw-title {
  grid-column: 1 / span 3;
  grid-row: 1 / span 1;
  display: flex;
  justify-content: space-between;
}

.cart-product-raw-title > div {
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 1rem;
}

.cart-product-raw-title h3 {
  margin: 0;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  max-width: 100%;
  font-size: 1.6rem;
  color: inherit;
}

.cart-product-raw-title h3 a {
  text-decoration: none;
}

.cart-product-raw-title h3 a:hover {
  text-decoration: underline;
}

.cart-product-raw-title button {
  margin-left: 30px;
  padding: 15px;
  background: var(--button-color);
  border-radius: calc(var(--border-radius) / 3);
}

.cart-product-raw-title svg {
  width: 1.7rem;
}

.cart-product-raw-title p {
  margin: 0;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.cart-product-raw-counter {
  grid-column: 2 / span 1;
  grid-row: 2 / span 1;
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
  justify-content: space-between;
}

.cart-product-raw-counter button {
  background: var(--button-color);
  border-radius: calc(var(--border-radius) / 3);
  width: 70px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 0.7rem;
}

.cart-product-raw-counter svg {
  width: 15px;
}

.cart-product-raw-prices {
  grid-column: 3 / span 1;
  grid-row: 2 / span 1;
  list-style: none;
  padding: 0;
  margin: 0;
  text-align: right;
  margin-top: auto;
  margin-left: auto;
  min-width: 350px;
}

.cart-product-raw-prices li,
.cart-product-raw-prices li > div {
  height: 2.7rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-product-raw-prices li > div {
  justify-content: flex-end;
}

.cart-product-raw-prices li p {
  font-size: 1.4rem;
  margin: 0;
}

.cart-product-raw-prices li p s {
  margin: 0 7px;
}

.cart-product-raw-prices li p:first-child {
  text-align: left;
}

.cart-product-raw-prices li > div {
  width: 60%;
}

.cart-product-raw-prices li p:last-child {
  font-weight: 600;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.cart-footer {
  background: var(--footer-background);
  color: var(--footer-font-color);
  position: sticky;
  bottom: 0;
  right: 0;
  left: 0;
  padding: 1.5rem 0;
  width: 100%;
  transition: transform 0.3s ease-in-out;
}

.cart-footer .path {
  stroke: var(--footer-font-color);
}

.cart-footer-wrapper {
  width: 80%;
  max-width: 1000px;
  margin: 0 auto;
}

.cart-footer ul {
  list-style: none;
  padding: 0;
}

.cart-footer ul li {
  display: flex;
  justify-content: space-between;
  height: 3rem;
}

.cart-footer ul li p {
  margin: 0;
}

.cart-footer ul li s {
  margin-right: 5px;
  color: inherit;
}

.cart-footer-payment {
  margin: 10px auto 15px auto;
  width: 40rem;
  text-align: center;
}

.cart-footer-payment .loading-overlay__spinner {
  float: left;
  margin-right: 10px;
  width: 2.5rem;
}

.cart-footer-payment svg .path {
  stroke: var(--checkout-button-color);
}

.cart-footer-payment-extra {
  display: inline-block;
  background: var(--footer-extra-background);
  color: var(--footer-extra-color);
  border-radius: 50px;
  padding: 0.4rem 4rem;
}

.cart-footer-payment-cart,
.cart-footer-payment-checkout {
  text-decoration: none;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 50px;
  border-radius: 10px;
  color: var(--card-background);
  font-size: 1.7rem;
}

.cart-footer-payment-cart {
  background: var(--cart-button-background);
  color: var(--cart-button-color);
}

.cart-footer-payment-checkout {
  background: var(--checkout-button-background);
  color: var(--checkout-button-color);
  margin-top: 10px;
}

.cart-footer-payment-cart svg,
.cart-footer-payment-checkout svg {
  margin-right: 5px;
  width: 2.8rem;
}

.cart-footer-payment-cart svg {
  fill: var(--cart-button-color);
}

.cart-footer-payment-checkout svg {
  fill: var(--checkout-button-color);
}

.cart-footer-payment-logo {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 10px;
  width: unset;
}

@media screen and (max-width: 750px) {
  .cart-product-raw {
    grid-template-columns: auto 1fr;
    grid-template-rows: auto auto auto;
    grid-column-gap: 3rem;
    grid-row-gap: 1.5rem;
  }

  .cart-product-raw-img-box {
    grid-column: 1 / span 1;
    grid-row: 2 / span 1;
  }

  .cart-product-raw-title {
    grid-column: 1 / span 2;
    grid-row: 1 / span 1;
  }

  .cart-product-raw-title button {
    margin-left: 10px;
  }

  .cart-product-raw-counter {
    grid-column: 2 / span 1;
    grid-row: 2 / span 1;
    flex-direction: row;
    justify-content: flex-start;
  }

  .cart-product-raw-counter button {
    width: 100px;
    height: 60px;
  }

  .cart-product-raw-counter svg {
    width: 20px;
  }

  .cart-product-raw-prices {
    grid-column: 1 / span 2;
    grid-row: 3 / span 2;
    transform: translateY(10px);
    min-width: unset;
    margin-left: unset;
  }

  .cart-footer-payment {
    width: 100%;
  }
}

@media screen and (max-width: 590px) {
  .cart-product-raw-counter {
    flex-direction: column-reverse;
    align-items: flex-start;
  }

  .cart-product-raw-counter button {
    width: 100px;
    height: 50px;
  }

  .cart-product-raw-counter svg {
    width: 20px;
  }

  .cart-product-raw-counter button:first-child {
    margin-top: 10px;
  }

  .cart-footer {
    padding: 0;
  }
}

@media screen and (max-width: 350px) {
  .cart-section {
    min-width: 300px;
  }

  .cart-product-raw {
    margin-left: 10px;
    margin-right: 10px;
    padding: 30px 20px;
  }
}
